<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_above="@+id/bottomnavigationbar_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framentholder_id"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigationbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        app:labelVisibilityMode="labeled"
        app:itemHorizontalTranslationEnabled="true"
        android:background="@color/white"
        app:itemIconTint="@drawable/bottomiconselector"
        app:itemTextColor="@drawable/textcolourselector"
        />

</RelativeLayout>